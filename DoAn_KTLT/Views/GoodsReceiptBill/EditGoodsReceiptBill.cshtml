@{
    ViewData["Title"] = "Sửa hóa đơn nhập hàng";
    GoodsReceiptBill goodsReceiptBill = ViewBag.goodsReceiptBill;
    /*  Category[] categories = ViewBag.CategoryList;*/
}
<h1>@ViewData["Title"]</h1>

@if (goodsReceiptBill == null)
{
    <p>Hóa đơn không tồn taị </p>
}
else
{
    <form class="row" method="post" action="EditGoodsReceiptBill?goodsReceiptBillCode=@goodsReceiptBill.goodsReceiptBillCode">
        <div class="col-md-6">
            <label for="goodsReceiptBillCode" >Mã hóa đơn:</label>
            <input type="text" class="form-control" value="@goodsReceiptBill.goodsReceiptBillCode" disabled>
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptBillProductName" >Tên hàng:</label>
            <input type="text" id="goodsReceiptBillProductName" name="goodsReceiptBillProductName" class="form-control" value="@goodsReceiptBill.goodsReceiptBillProductName">
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptBillProductQuantity" >Số lượng:</label>
            <input type="number" id="goodsReceiptBillProductQuantity" name="goodsReceiptBillProductQuantity" class="form-control" value="@goodsReceiptBill.goodsReceiptBillProductQuantity">
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptProductUnit">Đơn vị tính:</label>
            <input type="text" id="goodsReceiptProductUnit" name="goodsReceiptProductUnit" class="form-control" value="@goodsReceiptBill.goodsReceiptProductUnit">
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptBillProductPrice">Giá:</label>
            <input type="number" id="goodsReceiptBillProductPrice" name="goodsReceiptBillProductPrice" class="form-control" value="@goodsReceiptBill.goodsReceiptBillProductPrice">
        </div>
@*         <div class="col-md-6">
            <label for="ProductCategory">Loại hàng:</label>
            <select id="ProductCategory" name="ProductCategory" class="form-control" asp-for="@product.ProductCategory">
                <option value="volvo">Vui lòng chọn ...</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.CategoryCode">@cat.CategoryName</option>
                }
            </select>
        </div> *@
        <div class="col-md-6">
            <label for="goodsReceiptBillProductCompany">Công ty:</label>
            <input type="text" id="goodsReceiptBillProductCompany" name="goodsReceiptBillProductCompany" class="form-control" value="@goodsReceiptBill.goodsReceiptBillProductCompany">
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptBillProductDeliver">Người giao hàng:</label>
            <input type="text" id="goodsReceiptBillProductDeliver" name="goodsReceiptBillProductDeliver" class="form-control" value="@goodsReceiptBill.goodsReceiptBillProductDeliver">
        </div>
        <div class="col-md-6">
            <label for="goodsReceiptBillCreateDate">Ngày tạo hóa đơn:</label>
            <input type="date" id="goodsReceiptBillCreateDate" name="goodsReceiptBillCreateDate" class="form-control" value="@goodsReceiptBill.goodsReceiptBillCreateDate">
        </div>

        <div class="mt-3 col-md-12">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
}

