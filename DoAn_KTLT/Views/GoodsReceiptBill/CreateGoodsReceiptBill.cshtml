@{
    ViewData["Title"] = "Thêm hóa đơn nhập hàng";
    Product[] productList = ViewBag.ProductList;
}
<h1>@ViewData["Title"]</h1>

@*https://getbootstrap.com/docs/5.0/forms/layout/*@
<form class="row" method="post" action="CreateGoodsReceiptBill">

    <div class="col-md-6">
        <label for="goodsReceiptBillProductName">Tên hàng:</label>
        <select id="goodsReceiptBillProductCode" name="goodsReceiptBillProductCode" class="form-control">
            <option >Vui lòng chọn ...</option>
            @foreach (var product in productList)
            {
                <option value="@product.ProductCode">@product.ProductName</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label for="goodsReceiptBillProductQuantity">Số lượng:</label>
        <input type="number" id="goodsReceiptBillProductQuantity" name="goodsReceiptBillProductQuantity" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="goodsReceiptProductUnit">Đơn vị tính:</label>
        <input type="text" id="goodsReceiptProductUnit" name="goodsReceiptProductUnit" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="goodsReceiptBillProductPrice">Giá:</label>
        <input type="number" id="goodsReceiptBillProductPrice" name="goodsReceiptBillProductPrice" class="form-control">
    </div>

    <div class="col-md-6">
        <label for="goodsReceiptBillProductCompany">Công ty:</label>
        <input type="text" id="goodsReceiptBillProductCompany" name="goodsReceiptBillProductCompany" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="goodsReceiptBillProductDeliver">Người giao hàng:</label>
        <input type="text" id="goodsReceiptBillProductDeliver" name="goodsReceiptBillProductDeliver" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="goodsReceiptBillCreateDate">Ngày tạo hóa đơn:</label>
        <input type="date" id="goodsReceiptBillCreateDate" name="goodsReceiptBillCreateDate" class="form-control">
    </div>

    <div class="mt-3 col-md-12">
        <button type="submit" class="btn btn-primary">Thêm</button>
    </div>
</form>