@{
    ViewData["Title"] = "Thêm mặt hàng";
    Category[] categories = ViewBag.CategoryList;
}
<h1>@ViewData["Title"]</h1>

@*https://getbootstrap.com/docs/5.0/forms/layout/*@
<form class="row" method="post" action="CreateProduct">

    <div class="col-md-6">
        <label for="ProductName">Tên hàng:</label>
        <input type="text" id="ProductName" name="ProductName" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="ProductExpiredAt">Hạng dùng:</label>
        <input type="date" id="ProductExpiredAt" name="ProductExpiredAt" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="ProductCompany">Công ty sản xuất:</label>
        <input type="text" id="ProductCompany" name="ProductCompany" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="ProductProductionDate">Ngày sản xuất:</label>
        <input type="date" id="ProductProductionDate" name="ProductProductionDate" class="form-control">
    </div>
    <div class="col-md-6">
        <label for="ProductCategory">Loại hàng:</label>
        <select id="ProductCategory" name="ProductCategory" class="form-control">
            <option value="volvo">Vui lòng chọn ...</option>
            @foreach (var cat in categories)
            {
                <option value="@cat.CategoryCode">@cat.CategoryName</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label for="ProductPrice">Giá:</label>
        <input type="number" id="ProductPrice" name="ProductPrice" class="form-control" min="0" max="10000000">
    </div>
    <div class="col-md-6">
        <label for="ProductQuantity">Số lượng mặt hàng:</label>
        <input type="number" id="ProductQuantity" name="ProductQuantity" class="form-control" min="0" max="10000000">
    </div>

    <div class="mt-3 col-md-12">
        <button type="submit" class="btn btn-primary">Thêm</button>
    </div>
</form>