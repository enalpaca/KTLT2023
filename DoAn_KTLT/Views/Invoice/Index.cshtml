@{
    ViewData["Title"] = "Danh sách hóa đơn bán hàng";
}

<h1>@ViewData["Title"]</h1>

<form method="post" action="Invoice/SearchInvoice">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Tìm mã hóa đơn, số điện thoại KH ..." aria-label="Tìm mã hóa đơn, số điện thoại KH ..." aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Tìm</button>
    </div>
</form>

<h2>Tổng cộng: @ViewBag.InvoiceList.Length</h2>

<div class="mb-3">
    <form style="display: inline" action="/Invoice/CreateInvoice" method="get">
        <button class="btn btn-primary">Tạo hóa đơn mới</button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Mã hóa đơn</th>
            <th>Tên khách hàng</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Tên hàng</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Ngày tạo hóa đơn</th>
            <th>Hành động</th>
        </tr>
        @foreach (var item in ViewBag.InvoiceList)
        {
            <tr>
                <td>@item.invoiceCode</td>
                <td>@item.invoiceCustomerName</td>
                <td>@item.invoiceCustomerAddress</td>
                <td>@item.invoiceCustomerPhone</td>
                <td>@item.invoiceProductname</td>
                <td>@item.invoiceProductPrice</td>
                <td>@item.invoiceProductQuantity</td>
                <td>@item.invoiceCreateDate</td>
                <td>

                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="/Invoice/EditInvoice?invoiceCode=@item.invoiceCode"><button type="button" class="btn btn-warning">Sửa</button></a>
                    </div>

                    <div class="btn-group" role="group" aria-label="Third group">
                        <form method="post" action="Product/DeleteInvoice?invoiceCode=@item.invoiceCode">
                            <input class="btn btn-danger" type="submit" value="Xóa">
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
