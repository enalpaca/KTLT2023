@{
    ViewData["Title"] = "Danh sách loại hàng";
}

<h1>@ViewData["Title"]</h1>

<form method="post" action="Category/SearchCategory">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Tìm mã loại hàng, loại hàng ..." aria-label="Tìm mã loại hàng, loại hàng ..." aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Tìm</button>
    </div>
</form>

<h2>Tổng cộng: @ViewBag.CategoryList.Length</h2>

<div class="mb-3">
    <a href="/Category/CreateCategory"><button class="btn btn-primary">Thêm mới loại hàng</button></a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Mã</th>
            <th>Tên loại hàng</th>
            <th>Hành động</th>
        </tr>
        @foreach (var item in ViewBag.CategoryList)
        {
            <tr>
                <td>@item.categoryCode</td>
                <td>@item.categoryName</td>

                <td>
                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="/Category/EditCategory?categoryCode=@item.categoryCode"><button type="button" class="btn btn-warning">Sửa</button></a>
                    </div>

                    <div class="btn-group" role="group" aria-label="Third group">
                        <form method="post" action="Category/DeleteCategory?categoryCode=@item.categoryCode">
                            <input class="btn btn-danger" type="submit" value="Xóa">
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
