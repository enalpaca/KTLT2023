@{
    ViewData["Title"] = "Sửa loại hàng";
    Category category = ViewBag.category;
}
<h1>@ViewData["Title"]</h1>

@if (category == null)
{
    <p>Loại hàng không tồn taị </p>
}
else
{
    <form class="row" method="post" action="EditCategory?CategoryCode=@category.CategoryCode">
        <div class="col-md-6">
            <label for="CategoryName">Mã:</label>
            <input type="text" class="form-control" value="@category.CategoryCode" disabled>
        </div>
        <div class="col-md-6">
            <label for="CategoryName">Tên loại hàng:</label>
            <input type="text" id="CategoryName" name="CategoryName" class="form-control" value="@category.CategoryName">
        </div>

        <div class="mt-3 col-md-12">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
}

